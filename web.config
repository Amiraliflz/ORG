<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    <aspNetCore processPath="dotnet" arguments="Application.dll" stdoutLogEnabled="false" stdoutLogFile="logs/stdout" hostingModel="InProcess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        <!-- Optional: set Kestrel URL if needed -->
        <!-- <environmentVariable name="ASPNETCORE_URLS" value="http://0.0.0.0:5000" /> -->
      </environmentVariables>
    </aspNetCore>
  </system.webServer>
</configuration>
