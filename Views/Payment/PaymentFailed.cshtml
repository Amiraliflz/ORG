@{
    ViewData["Title"] = "پرداخت ناموفق";
    Layout = "~/Views/Shared/_PaymentLayout.cshtml";
}

<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body text-center p-5">
          <!-- Payment Failed Icon -->
          <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="#ff4c51" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="mx-auto">
              <circle cx="12" cy="12" r="10"/>
              <line x1="15" y1="9" x2="9" y2="15"/>
              <line x1="9" y1="9" x2="15" y2="15"/>
            </svg>
          </div>

          <h1 class="mb-3" style="font-size: 2rem; color: #ff4c51;">پرداخت ناموفق بود</h1>
          <p class="mb-4 text-muted" style="font-size: 1.1rem;">
            @(ViewBag.ErrorMessage ?? "متأسفانه پرداخت شما با موفقیت انجام نشد")
          </p>

          <div class="d-grid gap-2 mb-4">
            <a href="@Url.Action("Index", "Home", new { area = "AgencyArea" })" class="btn btn-primary btn-lg">
              <i class="ti ti-home me-2"></i>
              بازگشت به صفحه اصلی
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
              <i class="ti ti-arrow-back me-2"></i>
              بازگشت
            </button>
          </div>

          <hr />

          <!-- Additional Info -->
          <div class="mt-4">
            <h6 class="mb-3">
              <i class="ti ti-info-circle me-2 text-info"></i>
              راهنمایی
            </h6>
            <ul class="text-start text-muted small">
              <li class="mb-2">مطمئن شوید موجودی کارت کافی باشد</li>
              <li class="mb-2">رمز دوم کارت را صحیح وارد کنید</li>
              <li class="mb-2">از فیلترشکن استفاده نکنید</li>
              <li class="mb-0">در صورت کسر وجه، طی 72 ساعت به حسابتان برمی‌گردد</li>
            </ul>
          </div>

          <hr />

          <!-- Support Contact -->
          <div class="mt-4">
            <p class="text-muted mb-0">
              <i class="ti ti-phone me-1"></i>
              پشتیبانی: <strong>021-12345678</strong>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .card {
        border-radius: 15px;
        border: none;
    }
</style>
